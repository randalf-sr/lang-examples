import java.util.Scanner;

public class Soundex {
    
    private String code;

    public Soundex(String code) {
        this.code = code;
    }

    // Method to calculate Soundex code
    public String calculateSoundex(String s) {
        char[] x = s.toUpperCase().toCharArray();
        char firstLetter = x[0];
    
        // convert letters to numeric code
        for (int i = 0; i < x.length; i++) {
            switch (x[i]) {
                case 'B':
                case 'F':
                case 'P':
                case 'V': {
                    x[i] = '1';
                    break;
                }
    
                case 'C':
                case 'G':
                case 'J':
                case 'K':
                case 'Q':
                case 'S':
                case 'X':
                case 'Z': {
                    x[i] = '2';
                    break;
                }
    
                case 'D':
                case 'T': {
                    x[i] = '3';
                    break;
                }
    
                case 'L': {
                    x[i] = '4';
                    break;
                }
    
                case 'M':
                case 'N': {
                    x[i] = '5';
                    break;
                }
    
                case 'R': {
                    x[i] = '6';
                    break;
                }
    
                default: {
                    x[i] = '0';
                    break;
                }
            }
        }
    
        // remove duplicates
        String output = "" + firstLetter;
        for (int i = 1; i < x.length; i++)
            if (x[i] != x[i - 1] && x[i] != '0')
                output += x[i];
    
        // pad with 0's or truncate
        output = output + "0000";
        return output.substring(0, 4);
    }
    
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Enter a string to calculate its Soundex code:");
        String input = scanner.nextLine();
        Soundex soundex = new Soundex(input);
        String soundexCode = soundex.calculateSoundex(input);
        System.out.println("The Soundex code for '" + input + "' is: " + soundexCode);
    }    
}
